<div class="page-header">
  <h1>New Rollback</h1>
</div>

<%= simple_form_for @rollback do |f| %>
  <div class='row'>
    <div class='span12'>
      <%= f.input :reason, as: :text, input_html: { class: "span6" } %>
      <%= f.input :date, as: :string, label: 'Rollback to (date)',  input_html: { class: 'span6', 'data-behaviour' => 'datepicker' } %>
      <%= f.input :keep, as: :boolean, label: 'Keep', hint: 'Keeps update files and records since specified date and just mark them pending',  input_html: { class: 'span6' } %>
    </div>
  </div>

  <div class='form-actions'>
    <%= f.button :submit, class: 'btn btn-success', data: { 'disable-with' => 'Working' } %>
    <%= link_to "Back", :back, class: 'btn' %>
  </div>
<% end %>
