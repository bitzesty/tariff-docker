<div class="page-header">
  <h1>Edit Footnote</h1>
</div>

<%= simple_form_for footnote, url: footnote_path(footnote), class: 'footnote-form' do |f| %>
  <div class='row'>
    <div class='col-sm-6'>
      <%= f.input :description, as: :text, input_html: { class: 'form-control' } %>
    </div>
  </div>

  <div class='form-actions'>
    <%= f.button :submit, class: 'btn btn-warning', data: { 'disable-with' => 'Working' } %>
    <%= link_to "Back", :back, class: 'btn' %>
  </div>
<% end %>
